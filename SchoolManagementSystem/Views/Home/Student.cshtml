    
@{
    ViewBag.Title = "Student";
}
<style>
    .avatar {
        border-radius: 50%;
        max-width: 260px;
        margin-top: 0;
        overflow: hidden;
        border: 5px solid #fff;
        width: 150px;
        height: 150px;
    }
</style>
<div class="dashboard">
    <div class="row">
        <div class="col-sm-12">
            <p>
                <span>Home</span> | <span class="text-info">Student</span>
            </p>
        </div>
    </div>

    <div class="row margin-right-0px dashboard-widget">
        <div class="col-sm-3 dashboard-widget-container">
            <div class="avatar mx-auto white">
                <img src="https://mdbootstrap.com/img/Photos/Avatars/img%20%2810%29.jpg" class="rounded-circle" alt="woman avatar" style="width:100%;">
            </div>
            <div>
                <h4 class="text-center">Name</h4>
                <h6 class="text-center">Username</h6>
            </div>
            <div>
                <table style="width:100%;" class="table table-sm table-striped table-bordered">
                    <tr>
                        <td>Email:</td>
                        <td>someone@email.com</td>
                    </tr>
                    <tr>
                        <td>DOB:</td>
                        <td>01/01/1900</td>
                    </tr>
                    <tr>
                        <td>Regestered Session:</td>
                        <td>2017-2019</td>
                    </tr>
                    <tr>
                        <td>Class:</td>
                        <td>BSCS 5A</td>
                    </tr>
                    <tr>
                        <td>Current Address:</td>
                        <td>house # street # city state</td>
                    </tr>
                    <tr>
                        <td>Permanent Address:</td>
                        <td>house # street # city state</td>
                    </tr>
                    <tr>
                        <td>Guardians Contact:</td>
                        <td>house # street # city state</td>
                    </tr>
                    <tr>
                        <td>Altenative Contact:</td>
                        <td>house # street # city state</td>
                    </tr>
                    <tr>
                        <td>Active:</td>
                        <td>Yes</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-sm-9 dashboard-widget-container">
            <div class="row" style="margin-left:15px;margin-right:0">
                <div class="col-sm-2 student-profile-widget-container bg-danger">
                    <div>
                        <h6 class="text-center"><i class="fa fa-file-word-o fa-2x white-text"></i></h6>
                        <p class="text-center text-white">Docs</p>
                    </div>
                </div>
                <div class="col-sm-2 student-profile-widget-container bg-success">
                    <h6 class="text-center"><i class="fa fa-graduation-cap fa-2x white-text"></i></h6>
                    <p class="text-center text-white">Exam Reports</p>
                </div>
                <div class="col-sm-2 student-profile-widget-container bg-secondary">
                    <h6 class="text-center"><i class="fa fa-book fa-2x white-text"></i></h6>
                    <p class="text-center text-white">Library Reports</p>
                </div>
                <div class="col-sm-2 student-profile-widget-container bg-warning">
                    <h6 class="text-center"><i class="fa fa-rocket fa-2x white-text"></i></h6>
                    <p class="text-center text-white">Extra Activities</p>
                </div>
                <div class="col-sm-2 student-profile-widget-container bg-primary">
                    <h6 class="text-center"><i class="fa fa-dollar fa-2x white-text"></i></h6>
                    <p class="text-center text-white">Payments</p>
                </div>
                <div class="col-sm-2 student-profile-widget-container bg-info">
                    <h6 class="text-center"><i class="fa fa-area-chart fa-2x white-text"></i></h6>
                    <p class="text-center text-white">Attendance</p>
                </div>
            </div>
            <div class="row" style="margin-left:15px;margin-right:0">
                <p>
                    <span class="text-info">General Documents</span>
                </p>
                <table class="table table-responsive table-responsive-lg">
                    <tr>
                        <td>Sr #</td>
                        <td>File Name</td>
                        <td>Action</td>
                    </tr>
                    <tr>
                        <td>
                            1
                        </td>
                        <td>
                            Transcript
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-success"><i class="fa fa-download "></i></button>
                            <button class="btn btn-sm btn-outline-danger"><i class="fa fa-trash "></i></button>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="row" style="margin-left:15px;margin-right:0">
                <p class="text-dark"><i class="fa fa-inbox"></i>Message to Paarents</p>
                <input type="text" class="form-group" style="width:100%; padding-left:15px;height:45px;" placeholder="Subject" />
                <textarea class="form-group" style="width:100%;min-height:200px;padding:15px;" placeholder="Message"></textarea>
                <button class="btn btn-outline-success" style="margin:0;">Send and Notify <i class="fa fa-arrow-circle-right"></i></button>
            </div>
        </div>

    </div>
    <div class="row margin-right-0px dashboard-widget">
        <div class="col-sm-12 dashboard-widget-container">
            <p class="text-primary">Related To:</p>
            <table class="table table-bordered table-responsive-lg">
                <tr>
                    <th>
                        Sr#
                    </th>
                    <th>
                        Guardian's Name
                    </th>
                    <th>
                        Contact
                    </th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>SomeOne</td>
                    <td>(123) 456-7890</td>
                </tr>
            </table>
        </div>
    </div>
</div>